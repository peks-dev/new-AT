---
import Link from "./layout/Link.astro";
interface Images {
  url: string;
  alt: string;
}

interface Data {
  id: string;
  name: string;
  service: string;
  images: Images[];
}

interface Props {
  projectData: Data;
}

const { projectData } = Astro.props;
---

<li class="slider__item-wrap">
  <picture class="slider__img-container">
    <source media="(min-width: 768px)" srcset={projectData.images[3].url} />
    <img src={projectData.images[1].url} alt={projectData.images[1].alt} />
  </picture>
  <div class="slider__column-right">
    <header class="slider__header">
      <h2 class="slider__title title--xlg">{projectData.name}</h2>
      <Link
        urlLink=`/Proyectos/${projectData.id}`
        align="center"
        variant="slider__link"
      >
        exlorar proyecto
      </Link>
    </header>
  </div>
  <p class="slider__details">
    servicio / <span class="slider__details--service"
      >{projectData.service}</span
    >
  </p>
</li>

<style>
  .slider__item-wrap {
    display: flex;
    height: 100%;
    min-width: 100%;
    position: relative;
  }
  .slider__img-container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }
  .slider__img-container::after {
    content: "";
    display: block;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    position: absolute;
    top: 0;
    left: 0;
  }
  .slider__img-container > img {
    /* width: 100%; */
    height: 100%;
    animation: pulse 10s linear infinite alternate;
  }

  .slider__header {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 80%;
    text-align: center;
    transform: translate(-50%, -50%);
  }
  .slider__title {
    margin-bottom: 1rem;
    color: var(--white);
  }
  .slider__details {
    position: absolute;
    bottom: var(--global-margin);
    left: var(--global-margin);
    color: var(--white);
    font-family: var(--font-medium);
    font-size: clamp(1.5rem, 3vw, 2rem);
    text-transform: uppercase;
  }
  .slider__details--service {
    font-family: var(--font-light);
    text-transform: none;
  }
</style>
