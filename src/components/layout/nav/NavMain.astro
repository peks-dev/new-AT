---
import Navbar from "./NavBar.astro";
import NavLinks from "./NavLinks.astro";
---

<nav class="nav-container">
  <div class="nav__plant">
    <dotlottie-player
      src="/assets/plant-pro.json"
      background="transparent"
      speed="1"
      class="lottie"
      direction="1"
      playMode="normal"
      loop
      autoplay></dotlottie-player>
  </div>
  <NavLinks />
  <Navbar />
</nav>
<script
  src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs"
  type="module"></script>
<script src="./interactionNav.js"></script>

<style>
  .nav-container {
    height: var(--nav-height);
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    transition: all 0.4s ease;
    overflow: hidden;
  }
  .nav-container.active {
    height: 100%;
    backdrop-filter: blur(1rem);
    -webkit-backdrop-filter: blur(1rem);
  }

  .nav__plant {
    position: absolute;
    top: -0.5rem;
    right: -0.5rem;
    width: 18rem;
    height: 18rem;
    transform: rotate(150deg);
  }
  .lottie {
    width: 100%;
    height: 100%;
  }
</style>
