---
interface Props {
  textSize?: "sm" | "md" | "lg";
  containerSize?: "content" | "80" | "full";
  textAlign?: "left" | "center" | "right";
  order?: number;
  custom?: string;
}

const {
  textSize,
  custom,
  containerSize,
  order,
  textAlign = "normal",
} = Astro.props;
---

<p
  class=`body-text ${custom}`
  data-textSize={textSize}
  data-container={containerSize}
>
  <slot />
</p>
<style define:vars={{ order, textAlign }}>
  .body-text {
    font-family: var(--font-text);
    font-size: clamp(1.5rem, 4vw, 2.8rem);
    color: currentColor;
    text-wrap: balance;
    word-break: auto-phrase;
    order: var(--order);
    text-align: var(--textAlign);
  }

  [data-textSize="lg"] {
    font-size: clamp(1.5rem, 5vw, 4rem);
  }
  [data-textSize="md"] {
    font-size: clamp(1.5rem, 4vw, 2.8rem);
  }

  [data-container="80"] {
    width: 90%;
  }
  .prueba {
    height: clamp(12rem, 30vh, 35rem);
    transform: translateX(-100%);
    animation: slideInLeft 0.6s ease-in-out 0.4s forwards;
  }
</style>
