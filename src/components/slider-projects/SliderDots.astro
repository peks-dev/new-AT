---
interface Props {
  ids: any[];
}
const { ids } = Astro.props;
---

<nav class="dots">
  {
    ids.map((id) => (
      <button class="dots__item" id={id}>
        <a href={`#${id}`} />
      </button>
    ))
  }
</nav>

<style>
  .dots {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    justify-content: space-between;
  }
  .dots__item {
    width: 1.5rem;
    height: 1.5rem;
    background-color: var(--primary-dark);
  }
  .dots__item.active {
    background-color: var(--primary-light);
  }
  a {
    width: 100%;
    height: 100%;
  }
</style>
