---
import Anahuac from "./icons/partners/Anahuac.astro";
import Faro from "./icons/partners/Faro.astro";
import Eladios from "./icons/partners/Eladios.astro";
import Lapalapa from "./icons/partners/Lapalapa.astro";
---

<div class="header-wrapper">
  <header class="header-container">
    <h1 class="header__subtitle">carpinteria</h1>
    <p class="header__title title--xlg">aguilar talleres</p>
    <span class="header__location">Mérida , Yucatán , México</span>
    <ul class="header__icons-wrapper">
      <li class="header__icon-container">
        <Anahuac />
      </li>
      <li class="header__icon-container">
        <Faro />
      </li>
      <li class="header__icon-container">
        <Eladios />
      </li>
      <li class="header__icon-container">
        <Lapalapa />
      </li>
    </ul>
  </header>
</div>

<style>
    .header-wrapper{
        max-width:50rem;
        border: var(--global-border-size) solid var(--global-border-color);
        padding: 1rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 3;
        opacity: 0;
       animation: fade-in 0.5s ease-in-out 2.5s forwards;
    }
    .header-container{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        background-color: var(--white);
        padding: 2rem 3rem 2rem 3rem;
        text-align: center;
    }
    .header__subtitle{
        font-family: var(--font-medium);
        font-size: var(--font-sml);
    }
    .header__title{
      font-family: var(--font-title);
      text-transform: uppercase;
    }
    .header__location {
    font-family: var(--font-light);
    font-size: 1.8rem;
    text-transform: capitalize;
    display: block;
    width: 100%;
  }
  .header__icons-wrapper {
    display: flex;
    max-height: 8rem;
    border-top: var(--global-border-size) solid var(--global-border-color);
    color: var(--primary-light);
    
  }
  .header__icon-container {
    flex 1 1 20%
  }
</style>
