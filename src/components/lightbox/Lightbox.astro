<picture class="lightbox-wrapper">
  <div class="lightbox__close-btn"></div>
  <img src="" alt="" class="lightbox__img" />
  <div class="lightbox__close-btn"></div>
</picture>
<script src="./lightbox.js"></script>
<style>
  .lightbox-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(1rem);
    -webkit-backdrop-filter: blur(1rem);
    z-index: 3;
    display: none;
  }
  .lightbox-wrapper.active {
    display: flex;
  }
  .lightbox__img {
    max-width: 95%;
    max-height: 95%;
    width: 100%;
    height: 100%;
    object-fit: contain; /* Mantiene las proporciones de la imagen sin distorsionar */
    position: relative;
    margin: auto;
    z-index: 5;
  }
  .lightbox__close-btn {
    width: 100%;
    height: 100%;
    background-color: transparent;
    z-index: 4;
  }
</style>
