---
import { furnitures } from "../../lib/furnitures";
const allImgs = [].concat(...Object.values(furnitures));
console.log(allImgs);
---

<div class="gallery__imgs-wrapper">
  <picture>
    <img src={allImgs[0].foto} alt="" />
  </picture>
</div>
<style>
  .gallery__imgs-wrapper {
    flex: 1 1 80%;
    width: 100%;
    background-color: aqua;
    padding-left: var(--global-margin);
    padding-right: var(--global-margin);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(max(15rem, 15%), 1fr));
    gap: 10px;
    padding-top: var(--global-margin);
  }

  .gallery__imgs-wrapper picture {
    display: flex;
    justify-content: center;
    max-height: 40rem;
  }

  .gallery__imgs-wrapper img {
    max-width: 100%; /* Asegura que la imagen no se desborde del contenedor */
    height: auto;
    /* Permite que la altura de la imagen se ajuste autom√°ticamente */
  }
</style>
