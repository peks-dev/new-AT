---
interface Image {
  url: string;
  alt: string;
  category: string;
}

interface Props {
  images: Image[]; // Array de objetos Image
}

const { images } = Astro.props;
---

<div class="project__gallery-wrapper" id="imgs-wrapper">
  {
    images.map((img, index) => {
      return (
        <picture class="project__img-container">
          <img src={img.url} alt={img.alt} class="img" />
        </picture>
      );
    })
  }
</div>

<style>
  .project__gallery-wrapper {
    /* background-color: blueviolet; */
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: var(--global-margin);
    gap: 1rem;
    overflow: auto;
    position: relative;
  }
  .project__img-container {
    border: var(--global-border-size) solid var(--global-border-color);
    padding: 1rem;
  }
  .project__gallery-wrapper::-webkit-scrollbar {
    width: 1rem;
    background-color: var(--white);
  }
  .project__gallery-wrapper::-webkit-scrollbar-track {
    background: var(--secundary-light);
  }
  .project__gallery-wrapper::-webkit-scrollbar-thumb {
    background: var(--secundary-dark);
  }
</style>
