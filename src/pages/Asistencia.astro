---
import Layout from "../layouts/Layout.astro";
import { pageSeoProperties } from "../lib/seoData.js";
---

<Layout
  title={pageSeoProperties.asistencia.title}
  socialTitle={pageSeoProperties.asistencia.socialTitle}
  description={pageSeoProperties.asistencia.description}
  socialImg={pageSeoProperties.asistencia.socialImgUrl}
  socialImgAlt={pageSeoProperties.asistencia.socialImgAlt}
  sitePath={pageSeoProperties.asistencia.sitePath}
>
  <section class="asistencia-wrapper">
    <div class="chatbot-container">
      <iframe
        src="https://widget.writesonic.com/CDN/index.html?service-base-url=https://api.botsonic.ai&token=3cc0aeca-441d-4c76-b706-6f9124fcc328&base-origin=https://bot.writesonic.com&instance-name=Botsonic&standalone=true&page-url=https://bot.writesonic.com/2ffdf0d1-710a-4247-8044-828415520c7b?t=connect&workspace_id=5f339cc7-8f34-4e3f-a2fc-24c50d497eba"
        class="chatbot__embed"
        loading="lazy"></iframe>
    </div>
  </section>
</Layout>

<style>
  .asistencia-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: top;
    justify-content: center;
  }

  .chatbot-container {
    width: 100%;
    height: 100%;
  }
