---
import Layout from "../layouts/Layout.astro";
import { pageSeoProperties } from "../lib/seoData.js";
---

<Layout
  title={pageSeoProperties.asistencia.title}
  socialTitle={pageSeoProperties.asistencia.socialTitle}
  description={pageSeoProperties.asistencia.description}
  socialImg={pageSeoProperties.asistencia.socialImgUrl}
  socialImgAlt={pageSeoProperties.asistencia.socialImgAlt}
  sitePath={pageSeoProperties.asistencia.sitePath}
>
  <section class="asistencia-wrapper">
    <iframe
      src="https://www.chatbase.co/chatbot-iframe/5w3cGCBu7Pubzm-83qhVe"
      width="100%"
      style="height: 100%; min-height: 700px"
      frameborder="0"
      class="chatbot"></iframe>
  </section>
</Layout>

<style>
  .asistencia-wrapper {
    width: 100%;
    height: 100%;
  }
  .chatbot {
    width: 100%;
    height: 100%;
    margin: auto;
  }
</style>
