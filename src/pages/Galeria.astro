---
import Layout from "../layouts/Layout.astro";
import Gallery from "../components/preact/gallery/Gallery";
import Lightbox from "../components/lightbox/Lightbox.astro";
---

<Layout title="galleria | AT">
  <div class="gallery-wrapper">
    <header class="gallery__header">
      <h1 class="title--lg">galleria de muebles</h1>
      <p>inspiración para cada rincón de tu hogar</p>
    </header>
    <Gallery client:load />
    <Lightbox />
  </div>
</Layout>

<style>
  .gallery-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    opacity: 0;
    animation: fade-in 0.7s ease-in-out 1s forwards;
  }
  .gallery__header {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--global-margin);
  }
  .gallery__header h1 {
    text-align: right;
    order: 2;
  }
  .gallery__header p {
    font-size: clamp(1.5rem, 3vw, 2.4rem);
    width: calc((100vw - var(--nav-height)) / 2);
    max-width: 50rem;
    font-family: var(--font-light);
    text-align: center;
    order: 1;
    width: fit-content;
  }
</style>
