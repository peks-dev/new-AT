---
// Components
import Layout from "../layouts/Layout.astro";
import SliderHeader from "../components/slider-services/SliderHeader.astro";
import SliderContent from "../components/slider-services/SliderContent.astro";
import { pageSeoProperties } from "../lib/seoData";
---

<Layout
  title={pageSeoProperties.servicio.title}
  socialTitle={pageSeoProperties.servicio.socialTitle}
  description={pageSeoProperties.servicio.description}
  socialImg={pageSeoProperties.servicio.socialImgUrl}
  socialImgAlt={pageSeoProperties.servicio.socialImgAlt}
  sitePath={pageSeoProperties.servicio.sitePath}
>
  <section class="services">
    <header class="services__header">
      <div class="services__title-wrapper">
        <h1 class="title--sm">servicios</h1>
      </div>
      <SliderHeader />
    </header>
    <SliderContent />
  </section>
</Layout>

<style>
  .services {
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .services__header {
    flex: 0 1 auto;
    padding: 0 var(--global-margin) 0 var(--global-margin);
    border-bottom: var(--global-border-size) solid var(--global-border-color);
    border-top: var(--global-border-size) solid var(--global-border-color);
    transform: translateY(-100%);
    animation: slideDown 0.6s ease-in-out 0.5s forwards;
  }
  .services__title-wrapper {
    text-align: center;
    padding: var(--global-margin) 0 var(--global-margin) 0;
    border-left: var(--global-border-size) solid var(--global-border-color);
    border-right: var(--global-border-size) solid var(--global-border-color);
  }
</style>
