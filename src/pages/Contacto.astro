---
import Layout from "../layouts/Layout.astro";
import Link from "../components/layout/Link.astro";

import { pageSeoProperties } from "../lib/seoData";
---

<Layout
  title={pageSeoProperties.contacto.title}
  socialTitle={pageSeoProperties.contacto.socialTitle}
  description={pageSeoProperties.contacto.description}
  socialImg={pageSeoProperties.contacto.socialImgUrl}
  socialImgAlt={pageSeoProperties.contacto.socialImgAlt}
  sitePath={pageSeoProperties.contacto.sitePath}
>
  <section class="contact">
    <div class="contact__content">
      <h1 class="contact__title title--lg">
        haznos parte de <br /> tu proyecto
      </h1>
      <ul class="contact__social-links">
        <li class="contact__social-link-container">
          email
          <Link
            variant="contact__link"
            align="auto"
            urlLink="mailto:atalleres@hotmail.com"
            open="_self"
          >
            atalleres@hotmail.com
          </Link>
        </li>
        <li class="contact__social-link-container">
          telefono
          <Link
            variant="contact__link"
            align="auto"
            urlLink="tel:9992008935"
            open="_self"
          >
            99-92-00-89-35
          </Link>
        </li>
        <li class="contact__social-link-container">
          instagram
          <Link
            variant="contact__link"
            align="auto"
            urlLink="https://www.instagram.com/atalleres.mid?igsh=NTVrdndnNHZydG9o"
            open="_blank"
          >
            @atalleres.mid
          </Link>
        </li>
        <li class="contact__social-link-container">
          faceboook
          <Link
            variant="contact__link"
            align="auto"
            urlLink="https://www.facebook.com/carpinteriaAT?mibextid=kFxxJD"
            open="_blank"
          >
            aguilar talleres
          </Link>
        </li>
      </ul>
    </div>
    <p class="contact__copyright">COPYRIGHT 2024 Â© aguilar talleres</p>
    <picture class="contact__img-container">
      <img
        src="/assets/dibujo-mueble.png"
        alt="dibujo de un mueble tipo sketch"
      />
    </picture>
  </section>
</Layout>

<style>
  .contact {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: end;
    align-items: center;
    position: relative;
    text-align: center;
  }
  .contact__content {
    height: 75%;
    width: calc(100% - (var(--global-margin) * 2));
    position: relative;
    max-width: 110rem;
    overflow: hidden;
  }
  .contact__title {
    font-size: clamp(3.2rem, 10vw, 12rem);
    transform: translateY(-100%);
    animation: slideDown 0.6s ease-in-out 0.5s forwards;
  }
  .contact__social-links {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    margin: 0 auto;
    margin-top: 5rem;
    width: 60%;
    max-width: 45rem;
    text-align: left;
    font-family: var(--font-medium);
    font-size: clamp(1.5rem, 3vw, 1.7rem);
    text-transform: uppercase;
  }
  .contact__social-link-container {
    min-width: 18rem;
    opacity: 0;
  }
  .contact__link {
    margin-top: 0.5rem;
  }

  .contact__img-container {
    position: absolute;
    bottom: 5%;
    right: 0;
    width: clamp(16rem, 50vw, 40rem);
    width: clamp(16rem, 50vw, 40rem);
    opacity: 0;
  }

  .contact__img-container > img {
    height: 100%;
    object-fit: contain;
  }
  .contact__copyright {
    font-family: var(--font-light);
    font-size: clamp(1.1rem, 2.1vw, 1.4rem);
    margin-bottom: var(--global-margin);
    opacity: 0;
  }
  .contact__content::before {
    content: "";
    display: block;
    width: var(--global-border-size);
    height: clamp(30rem, 85%, 40rem);
    background-color: var(--global-border-color);
    position: absolute;
    left: 10%;
    bottom: 0;
    transform-origin: top;
    opacity: 0;
    animation:
      drawLine 2s linear 0.9s,
      show 0.6s ease 0.9s forwards;
  }

  .contact__social-link-container,
  .contact__copyright,
  .contact__img-container {
    animation-name: show;
    animation-duration: 0.6s;
    animation-fill-mode: forwards;
  }
  .contact__social-link-container:nth-child(1) {
    animation-delay: 1s;
  }
  .contact__social-link-container:nth-child(2) {
    animation-delay: 1.4s;
  }
  .contact__social-link-container:nth-child(3) {
    animation-delay: 1.8s;
  }
  .contact__social-link-container:nth-child(4) {
    animation-delay: 2.2s;
  }
  .contact__copyright,
  .contact__img-container {
    animation-duration: 1s;
    animation-delay: 2.4s;
  }

  @media screen and (min-width: 1050px) {
    .contact__social-links {
      flex-direction: row;
      flex-wrap: wrap;
      width: 70%;
      justify-content: space-around;
      text-align: center;
    }
    .contact__link {
      margin-top: 2rem;
    }
  }
</style>
