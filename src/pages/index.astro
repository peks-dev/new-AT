---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Aguilar Talleres Carpinteria">
  <section class="home">
    <div class="home__imgs-container">hola</div>
    <header class="home__header">
      <div class="home__wrapper">
        <h1 class="home__carpi">carpintería</h1>
        <div class="home__middle-container">
          <p class="home__title title--xlg" id="home__title">
            aguilar<br /> talleres
          </p>
          <span class="home__location"> Mérida, Yucatán, México</span>
        </div>
        <spam class="home__menu">menu</spam>
      </div>
    </header>
  </section>
</Layout>

<style>
  .home {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .home__imgs-container {
    flex: 1 1 100%;
    background-color: red;
  }
  .home__header {
    margin-top: 2rem;
    width: 100%;
    text-align: center;
  }
  .home__wrapper {
    width: min-content;
    margin: auto;
    padding-bottom: var(--global-margin);
  }
  .home__carpi {
    font-family: var(--font-medium);
    font-size: var(--font-sml);
    border-bottom: var(--global-border-size) solid var(--global-border-color);
  }
  .home__middle-container {
    max-height: 0;
    animation: grow 1.8s ease-in-out 0.5s forwards;
    overflow: hidden;
  }

  .home__title {
    overflow: hidden;
    font-family: var(--font-title);
    text-transform: uppercase;
    padding-top: 0.5rem;
  }

  .home__location {
    font-family: var(--font-light);
    font-size: 1.8rem;
    text-transform: capitalize;
    display: block;
    width: 100%;
  }

  .home__menu {
    margin-top: var(--global-margin);
    border-top: var(--global-border-size) solid var(--global-border-color);
    font-family: var(--font-regular);
    font-size: 1.4rem;
    text-transform: uppercase;
    color: var(--primary-light);
    letter-spacing: 0.1rem;
  }
  /* vertical line border */
  .home__menu::before,
  .home__carpi::after {
    content: "";
    display: block;
    width: var(--global-border-size);
    height: 4rem;
    background-color: var(--global-border-color);
    margin: auto;
  }
  .home__carpi,
  .home__menu {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes grow {
    from {
      max-height: 0;
    }
    to {
      max-height: 100vh;
    }
  }
</style>
